<?xml version="1.0"?>

<project name="Diagram UML Activity Elements" default="dist" basedir=".">

    <!--
    <import file="D:/TopCoder/config/commons.xml" />
    -->
    <property file="../topcoder_global.properties"/>

    <!-- COMPONENT PARAMETERS -->
